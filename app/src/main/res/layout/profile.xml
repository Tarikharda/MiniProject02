<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_fav1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_profile"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <ImageButton
        android:id="@+id/btn_fav2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_fav1"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <ImageButton
        android:id="@+id/btn_fav3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_fav2"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <ImageButton
        android:id="@+id/btn_fav4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_fav3"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <ImageButton
        android:id="@+id/btn_fav5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_fav4"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />
</androidx.constraintlayout.widget.ConstraintLayout>