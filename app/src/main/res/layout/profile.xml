<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_FullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Full Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_user_profile"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_profile"
        app:layout_constraintStart_toStartOf="@+id/iv_user_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_star1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_profile"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <ImageView
        android:id="@+id/btn_star2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_star1"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <ImageView
        android:id="@+id/btn_star3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_star2"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <ImageView
        android:id="@+id/btn_star4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_star3"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <ImageView
        android:id="@+id/btn_star5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/unstar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_star4"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="From where"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_star1" />
</androidx.constraintlayout.widget.ConstraintLayout>